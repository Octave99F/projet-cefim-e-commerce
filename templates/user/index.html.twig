{% extends 'base.html.twig' %}

{% block title %}Miaou{% endblock %}

{% block body %}

<div class="w-75 mx-auto">

    <a href="category/alimentation" alt="Nos dernières nouveautés" title="Nos dernières nouveautés">
        <img class="mt-3" src="public/image/img/img_home.jpg" alt="home_page">
    </a>
	

    <div class="title-hp mt-3">
		<h1>Tout pour le bien-être <span>de votre animal.</span></h1>
		<p>20 ans de passion et d'expertise vétérinaire au service de vos animaux avec plus de 110 000 références en stock.</p>
	</div>

    {% for category in categories_products %}
    <div class="col- col-sm col-md col-lg">
        <div class="row my-3 justify-content-around">
            <a href="{{ path('user_categ',{url:category.url}) }}"><h2>{{category.name }}</h2></a>

            {% for p in category.products %}
                <div class="card mx-2 mt-3" style="width: 18rem;">
                    <img src="/public/image/produit/{{ p.img }}" class="card-img-top" alt="{{ p.name }}"
                        title="{{ p.name }}">
                    <div class="card-body">
                        <h3><a href="{{ path('user_product',{url:p.url}) }}">{{ p.name }}</a></3>
                        <p class="card-text mt-3 font-weight-bold">{{ p.price |number_format(2, ',') }} €</p>
                        <a href="{{ path('user_product',{url:p.url}) }}" class="btn btn-primary">Voir le produit</a>
                    </div>
                </div>
            {% endfor %}

        </div>
    </div>
    {% endfor %}
</div>
{% endblock %}
